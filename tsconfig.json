{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Chakra UI Prose",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["dom", "ES2015"],
    "module": "ESNext",
    "target": "ES6",
    "jsx": "react-jsx"
  },
  "include": ["."],
  "exclude": ["dist", "build", "node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  }
}
